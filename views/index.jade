extends layout

block content
  script(type='text/javascript', src='/javascripts/index.js')
  .container
    hr
    .jumbotron
      h1 Can you typing faster than others?
      div
        a(href="play/").btn.btn-success.btn-large PROOF IT!
    hr
    div.row-fluid
      div.span6
        h4 Create custom room
        form#createRoom(method="GET", action="play/")
          table.table
            thead
              tr
                th(colspan="2") Options
            tbody
              tr
                td Time to start
                td
                  input(type="number", min="10", max="240", name="time", value="60")
              tr
                td Category
                td
                  script
                  select(name="category")
                    - for category in categories
                      option(value="#{category}")= category
              tr
                td(colspan="2")
                  input(type="submit", value="Create").btn.btn-primary

      div.span6
        h4 Rooms
        - if(rooms.length)
          table.table.table-striped
            thead
              tr
                th Category
                th Time to start
                th Join
            tbody
              - for room in rooms
                - roomTime = Math.floor((room.time - new Date().getTime()) / 1000)
                - if(roomTime > 10)
                  tr
                    td= room.category
                    td= roomTime
                    td
                      a(href="play/?room=#{room.id}")
                        div.btn.btn-primary Join
        - else
          h5 There is no rooms. Create new one ;)
